{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "Nutrix.API",
    "Audience": "Nutrix.Client",
    "ExpiryInMinutes": 120
  },
  "GoogleAuth": {
    "ClientId": "${GOOGLE_CLIENT_ID}",
    "ClientSecret": "${GOOGLE_CLIENT_SECRET}"
  },
  "GeminiAI": {
    "ApiKey": "${GEMINI_AI_API_KEY}",
    "ProjectId": "${GOOGLE_PROJECT_ID}",
    "ProjectNumber": "${GOOGLE_PROJECT_NUMBER}"
  },
  "GeminiPlan": {
    "ApiKey": "${GEMINI_PLAN_API_KEY}",
    "Model": "gemini-2.0-flash-exp",
    "MaxTokens": 4096,
    "Temperature": 0.1,
    "TimeoutSeconds": 30,
    "TopK": 20,
    "TopP": 0.8
  },
  "GeminiChatBot": {
    "ApiKey": "${GEMINI_CHATBOT_API_KEY}",
    "Model": "gemini-2.0-flash-001",
    "MaxTokens": 2048,
    "Temperature": 0.7,
    "TopK": 40,
    "TopP": 0.95,
    "TimeoutSeconds": 30
  },
  "FastAPISettings": {
    "Endpoint": "${FASTAPI_ENDPOINT}"
  },
  "DatabaseSettings": {
    "ConnectionString": "${DATABASE_CONNECTION_STRING}"
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "${SENDER_EMAIL}",
    "SenderPassword": "${SENDER_PASSWORD}",
    "SenderName": "Nutrix Team",
    "EnableSsl": true,
    "FrontendUrl": "${FRONTEND_URL}"
  }
} 